@model BMS.Models.MovieUser

@{
    ViewData["Title"] = "Booking";
}

<br />
<h2 class="text-info">Book Movie</h2>


    <div class="p-4 border rounded row">
        <input hidden asp-for="@Model.movieDetails.TID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.movieDetails.MovieName"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="@Model.movieDetails.MovieName" class="form-control" />

                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.movieDetails.Actor"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="@Model.movieDetails.Actor" class="form-control" />

                </div>

            </div>

            <form method="post" enctype="multipart/form-data">
                <div class="row p-3 border">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @*<div class="col-12 border-bottom text-center">
                    <h2 class="text-primary"></h2>
                    <div class="text-center"><p> Created data will store in MongoDb created by using CosmosDb service.</p></div>
                </div>*@
                    <div class="col-8 pt-4">
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="@Model.userDetails.name"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="@Model.userDetails.name" class="form-control" />
                                <span asp-validation-for="@Model.userDetails.name" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="@Model.userDetails.email"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="@Model.userDetails.email" class="form-control" />
                                <span asp-validation-for="@Model.userDetails.email" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="@Model.userDetails.Seat"></label>
                            </div>
                            @if(@Model.movieDetails.seat !=0){
                            <div class="col-8">
                                <select asp-for="@Model.userDetails.Seat" class="form-control">
                                    @for(int i=1;i<= @Model.movieDetails.seat; i++)
                           {
                                    <option>@i</option>
                           }
                                </select>

                            </div>
                    }

                    else{
                            <div class="col-8">
                                <select asp-for="@Model.userDetails.Seat" class="form-control">
                                    <option>No seat available</option>
                                </select>

                            </div>
                    }
                        </div>


                        <div class="form-group row">
                            <div class="col-4 offset-4">
                                <div class="row">

                                    <div class="col">
                                        <a asp-action="Index" class="btn btn-danger form-control">Cancel</a>
                                    </div>
                                    <div class="col">
                                        @if(@Model.movieDetails.seat !=0){
                                        <input type="submit" class="btn btn-success" style="width:200px;height:40px;text-size-adjust:auto" value="Book Seat" asp-route-id="@Model.movieDetails.TID" />
                                }
                                else{
                                        <input type="submit" disabled="disabled" class="btn btn-success" style="width:200px;height:40px;text-size-adjust:auto" value="Book Seat" asp-route-id="@Model.movieDetails.TID" />
                                }
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </form>

        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.movieDetails.imageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


        <br />
        @*<div class="form-group row" style="margin-left:25%">
            <a asp-action="Index" class="btn btn-danger " style="margin-right:25px;width:200px;height:40px;text-size-adjust:auto">Cancel</a>
            <input type="submit" class="btn btn-success" style="width:200px;height:40px;text-size-adjust:auto" value="Update" asp-route-id=@Model.MovieId />

        </div>*@
    </div>
   

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/m0yrc02gypdwbpw2su9vwys5mahxctd2f8lu5faa4uc5ydr5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        @*tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
*@

        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please select an image", "error");
                return false;
            }
            return true;
        };</script>

}


